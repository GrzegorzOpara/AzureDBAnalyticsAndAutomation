{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "sqlServerName": {
          "type": "string"
        },
        "sqlPoolName": {
          "type": "string"
        },
        "location": {
          "type": "string",
          "defaultValue": "[resourceGroup().location]"
        },
        "sku_name": {
          "type": "string",
          "defaultValue": "StandardPool"
        },
        "sku_tier": {
          "type": "string",
          "defaultValue": "Standard"
        },
        "sku_capacity": {
          "type": "int",
          "defaultValue": 50
        },
        "minDbCapacity": {
          "type": "int",
          "defaultValue": 25
        },
        "maxDbCapacity": {
          "type": "int",
          "defaultValue": 25
        }
    },
    "variables": {

    },
    "resources": [
      {
        "name": "[concat(parameters('sqlServerName'), '/', parameters('sqlPoolName'))]",
        "type": "Microsoft.Sql/servers/elasticPools",
        "apiVersion": "2017-10-01-preview",
        "location": "[parameters('location')]",
        "sku": {
          "name": "[parameters('sku_name')]", 
          "tier": "[parameters('sku_tier')]", 
          "capacity": "[parameters('sku_capacity')]"
        },
        "properties": {
          "perDatabaseSettings": {
            "minCapacity": "[parameters('minDbCapacity')]",
            "maxCapacity": "[parameters('maxDbCapacity')]"
          }
        }
      }
    ],
    "outputs": {}
  }
  